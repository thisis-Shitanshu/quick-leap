{
  "name": "myways-server",
  "version": "1.0.0",
  "engines": {
    "node": "10.16.0",
    "yarn": "1.9.4"
  },
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "build": "cd client && yarn build",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd client && yarn && yarn --only=dev --no-shrinkwrap && yarn build"
  },
  "dependencies": {
    "@hapi/joi": "16.1.7",
    "bcryptjs": "2.4.3",
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "jsonwebtoken": "8.5.1",
    "mongoose": "5.7.12"
  },
  "devDependencies": {
    "concurrently": "5.0.0",
    "dotenv": "8.2.0"
  }
}
